<section class="content">
  <h1>Log in</h1>
  <form action="/login" method="POST">
    <label for="username">Username</label>
    <input
      type="text"
      id="username"
      name="username"
      minlength="4"
      maxlength="16"
      required
    />
    <label for="password">Password</label>
    <input
      type="password"
      id="password"
      name="password"
      minlength="8"
      maxlength="20"
      required
    />
    <button type="submit">Proceed</button>
  </form>
</section>